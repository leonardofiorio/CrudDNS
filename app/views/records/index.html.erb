<p id="notice"><%= notice %></p>

<h1>Records</h1>

<table>
  <thead>
    <tr>
      <th>Type</th>
      <th>Host</th>
      <th>Ttl</th>
      <th>Content</th>
      <th>Priority</th>
      <th colspan="3">Ações</th>
    </tr>
  </thead>

  <tbody>
    <% @records.each do |record| %>
      <tr>
        <td><%= record.type_record %></td>
        <td><%= record.host %></td>
        <td><%= record.ttl %></td>
        <td><%= record.content %></td>
        <td><%= record.priority %></td>
        <td><%= link_to 'Exibir', record %></td>
        <td><%= link_to 'Editar', edit_record_path(record) %></td>
        <td><%= link_to 'Excluir', record, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Record', new_record_path %>
