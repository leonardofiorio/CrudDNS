<p id="notice"><%= notice %></p>

<h1>Domains</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Type</th>
      <th>Ttl</th>
      <th>Primary name server</th>
      <th>Contact</th>
      <th>Refresh</th>
      <th>Retry</th>
      <th>Expire</th>
      <th>Minimum</th>
      <th colspan="3">Ações</th>
    </tr>
  </thead>

  <tbody>
    <% @domains.each do |domain| %>
      <tr>
        <td><%= domain.name %></td>
        <td><%= domain.type_domain %></td>
        <td><%= domain.ttl %></td>
        <td><%= domain.primary_name_server %></td>
        <td><%= domain.contact %></td>
        <td><%= domain.refresh %></td>
        <td><%= domain.retry %></td>
        <td><%= domain.expire %></td>
        <td><%= domain.minimum %></td>
        <td><%= link_to 'Exibir', domain %></td>
        <td><%= link_to 'Editar', edit_domain_path(domain) %></td>
        <td><%= link_to 'Excluir', domain, method: :delete, data: { confirm: 'Tem certeza que deseja excluir este Domain?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Domain', new_domain_path %>

